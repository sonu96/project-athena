# Google Cloud Configuration (REQUIRED)
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
FIRESTORE_DATABASE=(default)

# Google AI Configuration
GOOGLE_AI_MODEL=gemini-1.5-pro
GOOGLE_LOCATION=us-central1

# CDP Configuration (Optional - will use Secret Manager if not set)
# CDP_API_KEY_ID=your_cdp_api_key_id_here
# CDP_API_KEY_SECRET=your_cdp_api_key_secret_here
# CDP_CLIENT_API_KEY=your_cdp_client_api_key_here

# LangSmith Configuration (Optional - will use Secret Manager if not set)
# LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=athena-ai

# Base Chain Configuration
BASE_RPC_URL=https://mainnet.base.org
CHAIN_ID=8453

# Memory Configuration (Optional - will use Secret Manager if not set)
# MEM0_API_KEY=your_mem0_api_key_here

# QuickNode Aerodrome API Configuration (NEW - for simplified DEX integration)
# QUICKNODE_API_KEY=your_quicknode_api_key_here
# QUICKNODE_ENDPOINT=https://your-endpoint.quiknode.pro

# Agent Configuration
AGENT_WALLET_ID=  # Will be created on first run
AGENT_CYCLE_TIME=300  # 5 minutes between cycles
AGENT_MAX_POSITION_SIZE=1000  # Max USD value per position
AGENT_RISK_LIMIT=0.02  # Max 2% loss per trade

# Rebalancing Configuration (NEW - for smart position management)
REBALANCE_MIN_APR=20.0              # Minimum acceptable APR
REBALANCE_APR_DROP_TRIGGER=30.0     # Trigger if APR drops by %
REBALANCE_COST_MULTIPLIER=2.0       # Expected gain must be X times cost
COMPOUND_MIN_VALUE=50.0             # Min rewards value to compound (USD)
COMPOUND_OPTIMAL_GAS=30.0           # Max gas price for profitable compound (gwei)

# Observation Mode Configuration
OBSERVATION_MODE=true  # Start in observation mode to learn patterns
OBSERVATION_DAYS=3  # Days to observe before trading
MIN_PATTERN_CONFIDENCE=0.7  # Minimum confidence to act on patterns

# Enhanced Memory System Configuration
MIN_APR_FOR_MEMORY=20  # Store pools with APR >= 20%
MIN_VOLUME_FOR_MEMORY=100000  # Store pools with volume >= $100k
MAX_MEMORIES_PER_CYCLE=50  # Prevent memory overflow
POOL_PROFILE_UPDATE_INTERVAL=3600  # Update profiles every hour

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
ENABLE_CORS=true

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=INFO

